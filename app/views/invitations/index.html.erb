<% if can? :create, Invitation %>
    <%= button_tag 'Invite an elf', 'data-bs-toggle': 'modal', 'data-bs-target': '#invitation-modal', class: 'btn btn-success' %>
<% end %>


  
    
      
     <h5 class="title">Invite an elf via email</h5>
      <%= form_with model: @invitation, class: "needs-validation", html: { novalidate: true } do |f| %>
        <div class="modal-body">
          <%= f.email_field :email, class: 'form-control', required: true %>
          <div class="invalid-feedback">
            Please enter a valid email address
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit 'Invite', class: 'btn btn-primary' %>
        </div>
      <% end %>



<table id="table-invitations" class="table table-striped">
  <thead>
    <tr>
      <th scope="col" class: 'btn fw-bolder'>email</th>
      <th scope="col" class: 'btn fw-bolder'>status</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @invitations.each_with_index do |invite, ind| %>
      <tr>
        <td><%= invite.email %></td>
        <td><%= invite.status %></td>
        <td class="text-center">
          <p id='invite-link-<%= ind %>' class='d-none'><%= new_user_registration_url token: invite.token %></p>
          <%= button_tag 'Copy invite link to clipboard',
                         type: :button,
                         target: "#invite-link-#{ ind }",
                         class: 'btn btn-copy btn-outline-primary',
                         'data-bs-content': "Copied!" %>
         <%#<%= destroy_link invite, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= javascript_pack_tag 'invitations' %>
